# Flask Configuration
SECRET_KEY=your_secret_key_here
STAFF_PASSWORD=your_staff_password_here
HCT_PASSWORD=your_hct_password_here

# Database (optional - defaults to sqlite:///database/taskforce.db)
# DATABASE_URL=sqlite:///database/taskforce.db

# Roblox API Configuration
# Get your group ID from your Roblox group URL: https://www.roblox.com/groups/{GROUP_ID}/
ROBLOX_GROUP_ID=

# Get this cookie from your bot account:
# 1. Log into the bot account in browser
# 2. Open Developer Tools (F12) → Application → Cookies → https://www.roblox.com
# 3. Copy the .ROBLOSECURITY cookie value
ROBLOX_COOKIE=

# Enable/disable Roblox sync (set to 'true' to enable)
ROBLOX_SYNC_ENABLED=false

# Sync interval in seconds (3600 = 1 hour)
# The system will automatically sync from Roblox every hour and also on startup
ROBLOX_SYNC_INTERVAL=3600

# Discord Webhook (optional - for notifications)
# DISCORD_WEBHOOK_URL=

# =================================================================
# DISCORD BOT API CONFIGURATION
# =================================================================
# Generate a secure API key with: python generate_api_key.py
DISCORD_BOT_API_KEY=your-secure-api-key-here

# API rate limiting (requests per minute)
API_RATE_LIMIT=100

# Enable detailed API logging
API_ENABLE_LOGGING=true

# Discord webhook for notifications to cortex-notis channel
# Get from: Discord Server Settings > Integrations > Webhooks > Copy Webhook URL
DISCORD_NOTIFICATION_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL_HERE
